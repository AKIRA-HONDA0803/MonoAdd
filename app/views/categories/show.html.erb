<h1><%= @category.name %></h1>
<p>上限数：<%= @category.limit %></p>

<div>
  <%= link_to  edit_category_path(@category) do %>
    <span class="button edit">編集する</span>
  <% end %><br>
  <%= link_to category_path(@category), method: :delete,data: {confirm: "本当に削除しますか？"} do %>
    <span class="button delete">削除する</span>
  <% end %>
</div>