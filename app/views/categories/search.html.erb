<h1>モノ一覧</h1>
<% if params[:keyword] %>
  <h4>「<%= params[:keyword] %>」の検索結果：<%= @search_category.count %>件</h4>
<% end %>

<% if params[:category_id] %>
  <h4>「<%= @category.name %>」に該当するモノ：<%= @search_category.count %>件</h4>
<% end %>

<% if params[:address_id] %>
  <h4>「<%= @address.name %>」にあるモノ：<%= @search_category.count %>件</h4>
<% end %>

<div class="category-items">
  <% @search_category.each do |item| %>
    <div class="category-item">
      <%= link_to item_path(item) do %>
      <div>
        <%= item.name %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
