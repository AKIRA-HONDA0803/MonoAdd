<h1 class="address-title">モノの場所</h1>
<div class="addresses">
  <div>
    <% @addresses.each do |address| %>
      <%= link_to search_address_path(address_id: address.id), class: "link" do %>
        <div class="address-list">
          <span>▶<%= address.name %>(<%= address.item.count %>)</span>
        </div>
      <% end %>
      <%= link_to "編集する", edit_address_path(address), class: "link button edit" %>
    <% end %>
  </div>
</div>


<div class="side">
  <%= form_with model:@address, local:true do |f| %>
    <h3><%= f.label :name, "場所の名前" %></h3>
    <%= f.text_field:name, class: "input-field" %>
    <%= f.submit '登録', class: "button create" %>
  <% end %>
</div>
