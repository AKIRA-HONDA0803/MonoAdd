<h1 class="items-title">モノ一覧</h1>
<div class="items">
  <% @items.each do |item| %>
    <div class="item-list">
      <%= link_to item_path(item), class: "link"  do %>
        <div class="item-name">
          <%= item.name %>
        </div>
        <%= link_to search_address_path(address_id: item.address.id), class: "link" do %>
          <div class="item-add">
            #<%= item.address.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
